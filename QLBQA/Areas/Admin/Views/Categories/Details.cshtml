@model QLBQA.Models.Category

@{
    ViewBag.Title = "Chi tiết danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="form-group">
    <div class="col-md-10">
        <h2>Chi tiết danh mục</h2>
    </div>
</div>


<div>

    <hr />
    <dl class="dl-horizontal">
        <div class="form-group">
            <p class="control-label col-md-3">Tên danh mục</p>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.CatName)
            </div>
        </div>
        <div class="form-group">
            <p class="control-label col-md-3">Thumb</p>
            <div class="col-md-10">
                <img class="img-rounded" alt="thumb" width="100" src="~/Content/images/thumb_cat_@Model.Thumb" />
            </div>
        </div>
        <div class="form-group">
            <p class="control-label col-md-3">Mô tả</p>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", style = "height: 100px;", @readonly = "readonly" })
            </div>
        </div>


        <div class="col-md-10">
            @if (Model.Published)
            {
                <div class="checkbox">
                    <input id="" type="checkbox" checked="" disabled="">
                    <label for="">Published</label>
                </div>
            }
            else
            {
                <div class="checkbox">
                    <input id="" type="checkbox"  disabled="">
                    <label for="">Unpublished</label>
                </div>
            }
        </div>
       
       

    </dl>
</div>
<div class="form-group">
    <div class="col-md-10">
        <a class="btn btn-warning m-r-5" href="@Url.Action("Edit", "Categories", new { id = Model.CatID })" title="Edit">Sửa</a>
        <a class="btn btn-info m-r-5" href="@Url.Action("Index", "Categories")" title="Back">Trở về</a>
    </div>
</div>
