@model IEnumerable<QLBQA.Models.Category>

@{
    ViewBag.Title = "Quản lý danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="@Url.Action("Index", "Home", new { area = "Admin" })" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Quản lý hệ thống</span>
            <span class="breadcrumb-item active">Quản lý danh mục</span>
        </nav>
    </div>
</div>

<p>
    <a class="btn btn-secondary btn-tone m-r-5" href="@Url.Action("Create", "Categories")" title="Create">Thêm mới</a>
</p>

<div class="card">
    <div class="card-body">
        <div id="accountTable" class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>

                        <th>Tên danh mục</th>
                        <th>Thumb</th>
                        <th>Mô tả</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.CatName
                                </td>
                                <td><img style="width:100px" src="~/Content/images/thumb_cat_@item.Thumb" alt="Thumb"></td>

                                <td>@item.Description</td>
                                <td>
                                    @if (item.Published)
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-success badge-dot m-r-10"></div>
                                            <div>Published</div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-danger badge-dot m-r-10"></div>
                                            <div>Unpublished</div>
                                        </div>
                                    }

                                </td>
                                <td>
                                    <a class="btn btn-primary btn-tone m-r-5" href="@Url.Action("Details", "Categories", new { id = item.CatID })" title="Details">Chi tiết</a>
                                    <a class="btn btn-warning btn-tone m-r-5" href="@Url.Action("Edit", "Categories", new { id = item.CatID })" title="Edit">Sửa</a>
                                    <a class="btn btn-danger btn-tone m-r-5" href="@Url.Action("Delete", "Categories", new { id = item.CatID })" title="Delete">Xóa</a>
                                </td>
                            </tr>
                        }
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>