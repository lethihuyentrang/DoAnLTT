@model QLBQA.Models.Color

@{
    ViewBag.Title = "Xóa màu sắc";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<h3>Bạn có chắc muốn xóa màu này?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên màu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ColorName)
        </dd>

        <dt>
            Mã màu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ColorCode)
        </dd>

        <dt>
            Mô tả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input class="btn btn-primary m-r-5" type="submit" value="Xóa" />
    <a class="btn btn-danger m-r-5" href="@Url.Action("Index", "Colors")" title="Back">Hủy</a>
</div>
    }
</div>
