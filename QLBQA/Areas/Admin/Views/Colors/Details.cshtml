@model QLBQA.Models.Color

@{
    ViewBag.Title = "Chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">

    <div class="card-body">
        <h4 class="card-title">Thông tin chi tiết</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID</td>
                        <td class="text-dark font-weight-semibold">@Model.ColorID</td>
                    </tr>
                    <tr>
                        <td>Tên màu</td>
                        <td>@Model.ColorName</td>
                    </tr>
                    <tr>
                        <td>Mã màu</td>
                        <td>@Model.ColorCode</td>
                       
                    </tr>
                    <tr>
                        <td>Minh họa</td>
                        <td>
                            <div class="circle" style=" background-color: @Model.ColorCode;"></div>
                        </td>
                    </tr>
                    <tr>
                        <td>Mô tả</td>
                        <td>@Model.Description</td>
                    </tr>

                </tbody>
            </table>

        </div>
    </div>

</div>
<p>
    <a class="btn btn-warning m-r-5" href="@Url.Action("Edit", "Colors", new { id = Model.ColorID})" title="Edit">Sửa</a>
    <a class="btn btn-info m-r-5" href="@Url.Action("Index", "Colors")" title="Back">Trở về</a>
</p>
<style>
    .circle {
        width: 20px;
        height: 20px;
        border-radius: 50%;
    }
</style>