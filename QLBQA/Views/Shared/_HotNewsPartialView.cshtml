
<div  class="sidebar widgets-area mb-9" id="sidebar" >
    <h2 class="widgets-title mb-5">Tin hot</h2>
    <div class="widgets-item">
        <div class="swiper-container widgets-list-slider style-2">
            <div class="swiper-wrapper">
                @foreach (var item in ViewBag.HotNews)
                {
                    <div class="swiper-slide">
                        <div class="product-list-item">
                            <div class="product-img img-zoom-effect">
                                <a href="@Url.Action("Details", "Blog", new { id = item.PostID })">
                                    <img class="img-full" src="~/Content/images/thumb_post_@item.Thumb" alt="Blog Images">
                                </a>
                            </div>
                            <div class="product-content">
                                <h5 class="title mb-3">
                                    <a title="@item.Title" href="@Url.Action("Details", "Blog", new { id = item.PostID })">
                                        <span class="clamp-2">@item.Title</span>
                                    </a>
                                </h5>
                               
                            </div>
                        </div>
                    </div>
                }


               
            </div>
        </div>
    </div>
</div>

<style>


    .clamp-2 {
        display: -webkit-box;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        -webkit-line-clamp: 2; /* Số dòng tối đa */
        /* Cố định chiều cao của thẻ */
        height: calc(2 * 1.4em); /* 1.2em là chiều cao của mỗi dòng (có thể điều chỉnh) */
    }
</style>